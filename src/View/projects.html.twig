{% extends 'home.html.twig' %}
{% block content %}

    <section id="threeProjects" class="grid-container">
        <div class="grid-x grid-margin-x">

    {% for project in projects %}
            <div class="small-12 medium-4 columns">
                <img class="thumbnail" src="{{ project['little_picture'] }}" alt="project">
                <div>
                    <h3>{{ project['title'] }}</h3>
                    <p>{{ project['short_description'] }}</p>
                    <div class="progress" role="progressbar" tabindex="0" aria-valuenow="25" aria-valuemin="0"
                         aria-valuetext="25 percent" aria-valuemax="100">
                    <span class="progress-meter" style="width: 25%">
                    <p class="progress-meter-text">25%</p></span>
                    </div>
                    <p class="text-right">2 500€ / {{ project['amount'] }}€</br>
                        {{ project['time_left'] }} j restants</p>
                    <p>par {{ project['first_name'] }} {{ project['name'] }} <img class="projectHolder" src="{{ project['avatar'] }}"></p>
                </div>
            </div>
    {% endfor %}
        </div>
    </section>

{% endblock %}