{% extends 'layout.html.twig' %}

{% block content %}
    {% if unauthorized %}
    <h1>{{ unauthorized }}</h1>
    {% else %}
    <h1>Espace porteur de projet : {{ sess.first_name ~ " " ~ sess.name }}</h1>
    <h2>{{ sess.structure_name }}</h2>

<section id="projectPreparation" class="grid-container">
    <h2>Projets en cours de préparation</h2>
    <div class="grid-x grid-margin-x">
        {% for project in projectPreparation %}
            <div class="small-12 medium-4 columns">
                <img class="thumbnail" src="{{ project.little_picture }}" alt="project">
                <div>
                    <h3>{{ project.title }}</h3>
                    <p>{{ project.short_description }}</p>
                    <div class="progress" role="progressbar" tabindex="0" aria-valuenow="80" aria-valuemin="0"
                         aria-valuetext="{{ project.percent }} %" aria-valuemax="100">
                    <span class="progress-meter" style="width: {{ project.percent }}%;">
                    <p class="progress-meter-text">{{ project.percent }}%</p></span>
                    </div>
                    <p class="text-right">{{ project.collected }}€ / {{ project.amount }}€</br>
                        {{ project.time_left }} j restants</p>
                    <p>par {{ project.first_name }} {{ project.name }} <img class="projectHolder" src="{{ project.avatar }}"></p>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
    {% endif %}
{% endblock %}
