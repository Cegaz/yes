{% extends 'layout.html.twig' %}

{% block banner %}
{% endblock %}

{% block content %}
    <form method="post" action="/depot/form2" enctype="multipart/form-data">
        <div class="grid-container">
            <h3>Profil du porteur de projet</h3>
            <div class="medium-6 cell">
                <label>Nom de la structure :
                    <input type="text" name="structure_name">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Nom de la personne référente :
                    <input type="text" name="name">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Prénom de la personne référente :
                    <input type="text" name="first_name">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Numéro de téléphone :
                    <input type="text" name="phone">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Avatar :</label>
                <label for="upload" class="button">Charger une image</label>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000000">
                <input type="file" id="upload" name="avatar" class="show-for-sr">
            </div>
            <input type="submit" class="button success" value="Je valide cette étape">
        </div>
    </form>

{% endblock %}